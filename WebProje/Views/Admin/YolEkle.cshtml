@model IEnumerable<WebProje.Models.Yol>

@{
    ViewData["Title"] = "YolEkle";
    Layout = ViewBag.Layout;

}

<h1>YolEkle</h1>

<p>
    <a asp-controller="Yol" asp-action="Create">Create New</a>
</p>
@{
    string error = TempData["hata"] as string;
}

@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-warning">@error</h2>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KalkisSehir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VarisSehir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KalkisZaman)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VarisZaman)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UCAK.sirkets)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.KalkisSehir.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.VarisSehir.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KalkisZaman)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VarisZaman)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UCAK.sirkets.SirketName)
            </td>
            <td>
                <a asp-controller="Yol" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Yol" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Yol" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="AdminSayfasi">Back to List</a>
</div>