@model IEnumerable<WebProje.Models.Rezervasyon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KoltukNumarasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KalkisSehirId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VarisSehirId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yol)
            </th>
          
            <th></th>
        </tr>
