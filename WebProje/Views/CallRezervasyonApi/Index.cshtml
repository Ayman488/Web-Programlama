            <td>
                @Html.DisplayFor(modelItem => item.KoltukNumarasi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KalkisSehirId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VarisSehirId)
            </td>
