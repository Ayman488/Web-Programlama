@model WebProje.Models.Ucak

@{
    ViewData["Title"] = "Edit";
    Layout = ViewBag.Layout;

}

<h1>Edit</h1>

<h4>Ucak</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="KoltukSayisi" class="control-label"></label>
                <input asp-for="KoltukSayisi" class="form-control" />
                <span asp-validation-for="KoltukSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sirketsId" class="control-label"></label>
                <select asp-for="sirketsId" class="form-control" asp-items="ViewBag.SirketID"></select>
                <span asp-validation-for="sirketsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="UcakEkle">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
