@model WebProje.Models.Havalemani

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Havalemani</h4>
<hr />

@{
    string error = TempData["hata"] as string;
}

@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-warning">@error</h2>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HavalemanininAdi" class="control-label"></label>
                <input asp-for="HavalemanininAdi" class="form-control" />
                <span asp-validation-for="HavalemanininAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SehirId" class="control-label"></label>
                <input asp-for="SehirId" class="form-control" />
                <span asp-validation-for="SehirId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="HavalemaniEkle">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
