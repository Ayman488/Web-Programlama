@model WebProje.Models.Sirket

@{
    ViewData["Title"] = "Edit";
    Layout = ViewBag.Layout;

}

<h1>Edit</h1>

<h4>Sirket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SirketId" />
            <div class="form-group">
                <label asp-for="SirketName" class="control-label"></label>
                <input asp-for="SirketName" class="form-control" />
                <span asp-validation-for="SirketName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="SirketEkle">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
